# Puertos (host)
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
LITELLM_PORT=8001
GRAPHITI_PORT=8000
BACKEND_PORT=9000
FRONTEND_PORT=5173
OLLAMA_PORT=11434

# Neo4j
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme
NEO4J_DATABASE=neo4j
# Debe ser un JSON string
NEO4J_PLUGINS_JSON=["apoc"]

# Modelos (Ollama / LiteLLM / Graphiti)
MODEL_NAME=ollama/deepseek-r1:7b
SMALL_MODEL_NAME=ollama/deepseek-r1:7b
EMBEDDER_MODEL_NAME=nomic-embed-text

# LiteLLM (proxy OpenAI-compatible)
OPENAI_API_KEY=put-a-non-empty-string-here
OPENAI_BASE_URL=http://litellm:${LITELLM_PORT}/v1

# Backend
GRAPHITI_BASE_URL=http://graphiti:${GRAPHITI_PORT}
CORS_ALLOWED_ORIGINS=http://localhost:${FRONTEND_PORT}
NEO4J_URI=bolt://neo4j:${NEO4J_BOLT_PORT}

# Frontend (Vite)
VITE_API_URL=http://localhost:${BACKEND_PORT}
VITE_GRAPHITI_URL=http://localhost:${GRAPHITI_PORT}
